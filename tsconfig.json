{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "scripts"]
}
